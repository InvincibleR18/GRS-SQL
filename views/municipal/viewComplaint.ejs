  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Complaint</title>
  <link rel="stylesheet" href="css/font-awesome.min.css" />
</head>
<div class="ele">
	<body  style="background-image: url('/css/images/pic1.jpg');">
		<div class="heading">
		<h1><u>Complaint Details for<i> Complaint ID : </i><%= complaint.ID %></u></h1>
		</div> <br>
		<div class="main">
			<table  style="width:60%">
				<tr>
				  <th  style="height:50px;width:200px" bgcolor="grey"><label class="label1">Complaint ID : </label></th>
				  <td style="height:50px;width:500px"><%=complaint.ID %></th>
				</tr>
				<tr>
					<th style="height:50px;width:200px"><label class="label2">Department :      </label></th>
					<td style="height:50px;width:500px"><%=complaint.dept %></th>
				  </tr>
				  <tr>
					<th style="height:50px;width:200px" bgcolor="grey"><label class="label3">Area Code :       </label></th>
					<td style="height:50px;width:500px"><%=complaint.areaCode %></th>
				  </tr>
				  <tr>
					<th style="height:50px;width:200px"><label class="label4">Title :           </label4></th>
					<td style="height:50px;width:500px"><%=complaint.title %></th>
				  </tr>
				  <tr>
					<th style="height:50px;width:200px" bgcolor="grey"><label class="label5">Description : </label></th>
					<td style="height:50px;width:500px"><%=complaint.description %></th>
				  </tr>
				  <tr>
					<th style="height:50px;width:200px"><label class="label6">Status : </label></th>
					<td style="height:50px;width:500px"><%= ((complaint._status==0)?'Pending':''); %>
						<% if(complaint._status==1){ %>
							Resolved
						<% } %>
						<%= ((complaint._status==2)?'Marked As Inappropriate':''); %>
				<% if(complaint._status==3){ %>
					Inappropriate (Discarded)
				<% } %>
				<%= ((complaint._status==4)?'Pending (Marked Appropriate)':''); %></th>
		  </tr>
		  <tr>
			<th style="height:50px;width:200px" bgcolor="grey">
				<label class="label7">Report : </label></th>
				 <td style="height:50px;width:500px"><%= complaint.report %></td>
				 </tr>
		  <tr>
			<th style="height:50px;width:200px" ><label class="label8">Created At : </label></th>
			<td style="height:50px;width:500px"><%= complaint.createdAt %></th>
		  </tr>
		</table>
	</div>
</div>
	
	<div id="container">
		  <% if(complaint._status==0 || complaint._status==4){ %>
			<% if(complaint._status!=4){ %>
				<form action="/municipal/<%=complaint.ID %>/flag" method="POST">
					<button class="btn1" type="submit"  name="button" id="submit">Flag Inappropriate</button>
				</form>
			<% } %>
	
			<form action="/municipal/<%=complaint.ID %>/resolve" method="GET">
				<button class="btn2"  type="submit" name="button" id="submit">Resolve</button>
			</form>
		<% } %>
	</div>
	

</body>
</html>
